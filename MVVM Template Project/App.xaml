<Application x:Class="MVVM_Template_Project.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MVVM_Template_Project.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             StartupUri="Views/MainWindow.xaml"
             mc:Ignorable="d">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Auxiliary\Resources\DataTemplates.xaml" />
                <ResourceDictionary Source="Auxiliary\Resources\Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
                 <!--    Global View Model Locator   -->
        <vm:ViewModelLocator x:Key="Locator"
                             d:IsDataSource="True" />
        </ResourceDictionary>
       
      
    </Application.Resources>
    
</Application>
